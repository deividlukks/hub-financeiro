# =============================================================================
# HUB FINANCEIRO - CONFIGURAÇÕES DE AMBIENTE
# =============================================================================
# Copie este arquivo para .env e configure as variáveis conforme necessário

# =============================================================================
# CONFIGURAÇÕES GERAIS DO DJANGO
# =============================================================================
SECRET_KEY=django-insecure-hub-financeiro-change-this-key-in-production
DEBUG=True
DJANGO_ENV=development
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# =============================================================================
# PostgreSQL (Recomendado para produção)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=hub_financeiro
DB_USER=postgres
DB_PASSWORD=postgres123
DB_HOST=localhost
DB_PORT=5432

# SQLite (Para desenvolvimento local)
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# =============================================================================
# CONFIGURAÇÕES DO REDIS
# =============================================================================
REDIS_URL=redis://127.0.0.1:6379/0
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# =============================================================================
# CONFIGURAÇÕES DO TELEGRAM BOT
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://yourserver.com/telegram/webhook/

# =============================================================================
# APIS DE DADOS FINANCEIROS
# =============================================================================
# Alpha Vantage (Dados de ações)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# Yahoo Finance (Alternativa gratuita)
YAHOO_FINANCE_API_KEY=optional_yahoo_finance_api_key

# Financial Modeling Prep (Dados fundamentalistas)
FINANCIAL_MODELING_PREP_API_KEY=your_fmp_api_key

# Polygon.io (Dados de mercado em tempo real)
POLYGON_API_KEY=your_polygon_api_key

# IEX Cloud (Dados financeiros)
IEX_CLOUD_API_KEY=your_iex_cloud_api_key

# Quandl (Dados econômicos)
QUANDL_API_KEY=your_quandl_api_key

# =============================================================================
# CONFIGURAÇÕES DE IA
# =============================================================================
# OpenAI (Para chatbot e análises)
OPENAI_API_KEY=your_openai_api_key

# Anthropic Claude (Alternativa)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Google AI (Para análises adicionais)
GOOGLE_AI_API_KEY=your_google_ai_api_key

# =============================================================================
# CONFIGURAÇÕES DE EMAIL
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password

# =============================================================================
# CONFIGURAÇÕES DE NOTIFICAÇÕES PUSH
# =============================================================================
# Firebase (Para notificações móveis)
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# OneSignal (Alternativa)
ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_REST_API_KEY=your_onesignal_rest_api_key

# =============================================================================
# CONFIGURAÇÕES DE ARMAZENAMENTO
# =============================================================================
# AWS S3 (Para arquivos em produção)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=hub-financeiro-storage
AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# CONFIGURAÇÕES DE MONITORAMENTO
# =============================================================================
# Sentry (Para monitoramento de erros)
SENTRY_DSN=your_sentry_dsn

# DataDog (Para métricas)
DATADOG_API_KEY=your_datadog_api_key

# =============================================================================
# CONFIGURAÇÕES DE TRADING
# =============================================================================
# Limite máximo de trades por dia
MAX_DAILY_TRADES=10

# Ativar gerenciamento de risco
RISK_MANAGEMENT_ENABLED=True

# Valor máximo por trade (em %)
MAX_TRADE_AMOUNT_PERCENT=5

# Stop loss padrão (em %)
DEFAULT_STOP_LOSS_PERCENT=3

# =============================================================================
# CONFIGURAÇÕES DE NOTIFICAÇÕES
# =============================================================================
PUSH_NOTIFICATIONS_ENABLED=True
EMAIL_NOTIFICATIONS_ENABLED=True
TELEGRAM_NOTIFICATIONS_ENABLED=True

# =============================================================================
# CONFIGURAÇÕES DE BACKUP
# =============================================================================
# Diretório para backups locais
BACKUP_DIR=/var/backups/hub_financeiro

# Retenção de backups (em dias)
BACKUP_RETENTION_DAYS=30

# =============================================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# =============================================================================
# Ativar toolbar de debug
DEBUG_TOOLBAR=True

# Mostrar consultas SQL no console
SHOW_SQL_QUERIES=False

# Modo de desenvolvimento para APIs
API_DEBUG_MODE=True

# =============================================================================
# CONFIGURAÇÕES DE PRODUÇÃO
# =============================================================================
# Domínio principal em produção
PRODUCTION_DOMAIN=hubfinanceiro.com

# CDN para arquivos estáticos
STATIC_CDN_URL=https://cdn.hubfinanceiro.com

# SSL em produção
USE_SSL=True

# =============================================================================
# CONFIGURAÇÕES DE RATE LIMITING
# =============================================================================
# Limites de API por minuto
API_RATE_LIMIT_PER_MINUTE=100

# Limites de consultas de mercado por hora
MARKET_DATA_RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# CONFIGURAÇÕES DE CACHE
# =============================================================================
# Tempo de cache padrão (em segundos)
DEFAULT_CACHE_TIMEOUT=300

# Cache de dados de mercado (em segundos)
MARKET_DATA_CACHE_TIMEOUT=60

# Cache de notícias (em segundos)
NEWS_CACHE_TIMEOUT=900

# =============================================================================
# CONFIGURAÇÕES DE LOGGING
# =============================================================================
# Nível de log
LOG_LEVEL=INFO

# Arquivo de log
LOG_FILE=/var/log/hub_financeiro/django.log

# Rotação de logs
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# =============================================================================
# CONFIGURAÇÕES DE TIMEZONE
# =============================================================================
# Timezone padrão
TIME_ZONE=America/Sao_Paulo

# Configurações de mercado
MARKET_TIMEZONE=America/New_York
FOREX_TIMEZONE=UTC